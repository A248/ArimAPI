<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>space.arim</groupId>
	<artifactId>arimapi</artifactId>
	<!-- Remember to update versions in all child modules -->
	<version>0.12.5-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<name>ArimAPI</name>
	<description>An efficient, easy-to-use minecraft plugin library and framework.</description>
	<url>https://github.com/Arim-Minecraft/ArimAPI</url>
	<inceptionYear>2019</inceptionYear>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>11</maven.compiler.source>
    	<maven.compiler.target>11</maven.compiler.target>
		<core.author>A248</core.author>
		
		<!-- Compile only -->
		<!-- Only necessary at compile or build time -->
		<lombok.version>1.18.12</lombok.version>
		<eclipseNullAnalysis.version>2.2.400</eclipseNullAnalysis.version>
		
		<!-- Required dependencies -->
		<!-- Must be included on the classpath without relocation -->
		<slf4j.version>1.7.25</slf4j.version><!-- Included on Paper 1.12.2+, Waterfall, Sponge, and Velocity -->
		
		<!-- Shaded dependencies -->
		<universal.version>0.9.1-SNAPSHOT</universal.version>
		<shinyclasspath.version>0.3.2-SNAPSHOT</shinyclasspath.version><!-- Includes relocated HSQLDB, HikariCP, and Caffeine -->
		
		<!-- Server software -->
		<spigot.version>1.8.8-R0.1-SNAPSHOT</spigot.version>
		<bungeecord.version>1.15-SNAPSHOT</bungeecord.version>
		<sponge.version>7.1.0</sponge.version>
		
		<!-- Shaded with server software -->
		<guava.version>28.2-jre</guava.version>
		<gson.version>2.8.6</gson.version>
		<snakeyaml.version>1.26</snakeyaml.version>
	</properties>
	
	<licenses>
		<license>
			<name>GNU General Public License, Version 3</name>
			<url>https://www.gnu.org/licenses/</url>
			<distribution>repo</distribution>
			<comments>Strong copyleft license, commonly known as the GNU GPL v3</comments>
		</license>
	</licenses>
	
	<developers>
		<developer>
			<id>anandbeh</id>
			<name>Anand Beh</name>
			<url>https://www.arim.space</url>
			<roles>
				<role>creator</role>
				<role>developer</role>
			</roles>
			<timezone>America/New_York</timezone>
		</developer>
	</developers>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>aggregate</goal>
							<goal>aggregate-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.1</version>
					<configuration>
						<source>11</source>
						<target>11</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-shade-plugin</artifactId>
					<version>3.2.3</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<modules>
		<module>api-chat</module>
		<module>api-util</module>
		<module>api-platform</module>
		<module>api-plugin</module>
	</modules>
	
	<distributionManagement>
		<repository>
			<id>arim-repo</id>
			<url>https://maven.cloudsmith.io/anand-beh/arim-repo/</url>
		</repository>
		<snapshotRepository>
			<id>arim-repo</id>
			<url>https://maven.cloudsmith.io/anand-beh/arim-repo/</url>
		</snapshotRepository>
	</distributionManagement>
	
	<dependencyManagement>
		<dependencies>
			<!-- Internal dependencies -->
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-chat</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-util</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-platform</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>arimapi-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<!-- Compile only -->
			<dependency>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok</artifactId>
				<version>${lombok.version}</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse.jdt</groupId>
				<artifactId>org.eclipse.jdt.annotation</artifactId>
				<version>${eclipseNullAnalysis.version}</version>
			</dependency>
			
			<!-- Required dependencies -->
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			
			<!-- Shaded dependencies -->
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-gpl</artifactId>
				<version>${universal.version}</version>
				<type>zip</type>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>universal-registry</artifactId>
				<version>${universal.version}</version>
			</dependency>
			<dependency>
				<groupId>space.arim</groupId>
				<artifactId>shinyclasspath</artifactId>
				<version>${shinyclasspath.version}</version>
			</dependency>
			
			<!-- Server software -->
			<dependency>
				<groupId>org.spigotmc</groupId>
				<artifactId>spigot-api</artifactId>
				<version>${spigot.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>net.md-5</groupId>
				<artifactId>bungeecord-api</artifactId>
				<version>${bungeecord.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.spongepowered</groupId>
				<artifactId>spongeapi</artifactId>
				<version>${sponge.version}</version>
				<scope>provided</scope>
			</dependency>
			
			<!-- Shaded with server software -->
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>${guava.version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.code.gson</groupId>
				<artifactId>gson</artifactId>
				<version>${gson.version}</version>
			</dependency>
			<dependency>
				<groupId>org.yaml</groupId>
				<artifactId>snakeyaml</artifactId>
				<version>${snakeyaml.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<repositories>
		<repository>
			<id>arim-repo</id>
			<url>https://www.arim.space/maven/</url>
		</repository>
		<repository>
			<id>spigot-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
		<repository>
       		<id>bungeecord-repo</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
   		</repository>
   		<repository>
			<id>sponge-repo</id>
			<url>https://repo.spongepowered.org/maven</url>
		</repository>
	</repositories>
</project>